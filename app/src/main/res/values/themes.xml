<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brand</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <!-- Customize your theme here. -->

    </style>
    <style name="CalculaterButton">
        <item name="android:textSize">@dimen/textNormal</item>
    </style>
    <style name="CalculaterButton.number">
        <item name="android:background">@drawable/circle_button_white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CalculaterButton.operation">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CalculaterButton.result">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>